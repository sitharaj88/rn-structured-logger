    "test:watch": "jest --watch",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sitharaj88/rn-structured-logger.git"
  },
  "homepage": "https://github.com/sitharaj88/rn-structured-logger#readme",
  "bugs": {
    "url": "https://github.com/sitharaj88/rn-structured-logger/issues"
  },
  "keywords": [
    "react-native",
    "react-native-logger",
    "structured-logging",
    "logging",
    "mobile-logging",
    "expo",
    "expo-logger",
    "typescript",
    "logging-library",
    "observability",
    "application-logging",
    "error-monitoring",
    "debugging",
    "redaction",
    "rate-limiting",
    "batching",
    "sentry",
    "analytics",
    "react",
    "ios",
    "android",
    "cross-platform",
    "log",
    "logs",
    "logger",
    "reactjs",
    "javascript",
    "native",
    "mobile",
    "web",
    "browser",
    "async",
    "enterprise"
  ],
  "author": "Your Name <you@example.com>",
